# Example
# target: dependencies
	# command 1
	# command 2
          # .
          # .
          # .
	# command n

GPU_ARCH ?=

# link objects(binaries) together
myocyte.out:		main.o
	nvcc	main.o \
				-lm -lcuda -lcudart \
        $(GPU_ARCH) -O3 -g -lineinfo -o myocyte.out

# compile main function file into object (binary)
main.o:	define.c \
				main.cu \
				work.cu \
				solver.cu \
				embedded_fehlberg_7_8.cu \
				master.cu \
				kernel.cu \
				kernel_ecc.cu \
				kernel_cam.cu \
				kernel_fin.cu \
				work_2.cu \
				solver_2.cu \
				embedded_fehlberg_7_8_2.cu \
				kernel_2.cu \
				kernel_ecc_2.cu \
				kernel_cam_2.cu \
				kernel_fin_2.cu \
				file.c \
				timer.c
	nvcc	main.cu \
				$(GPU_ARCH) -c -O3 -g -lineinfo

# delete all object files
clean:
	rm *.o *.out output.txt
